@using NugetProyectoBackPeluqueria.Models

@model Usuario

<div class="text-center">
    <h1 class="display-3 text-primary">Editar perfil</h1>
    <p class="text-secondary">Cambia la información de la cuenta</p>
</div>
<div class="d-flex justify-content-center mb-4">
    <a asp-controller="Management" asp-action="Index" class="btn btn-secondary mx-2">
        <i class="fa-solid fa-arrow-left"></i> Volver
    </a>
</div>

<form method="post" class="mt-3 p-4">
    <div class="mb-3">
        <label for="nombre" class="form-label">Nombre</label>
        <input type="text" name="Nombre" class="form-control" value="@Model?.Nombre" required />
    </div>

    <div class="mb-3">
        <label for="apellidos" class="form-label">Apellidos</label>
        <input type="text" name="Apellidos" class="form-control" value="@Model?.Apellidos" required />
    </div>

    <div class="mb-3">
        <label for="email" class="form-label">Correo</label>
        <input type="email" name="Email" class="form-control" value="@Model?.Email" required />
    </div>

    <div class="mb-3">
        <label for="telefono" class="form-label">Teléfono</label>
        <input type="text" name="Telefono" class="form-control" value="@Model?.Telefono" required pattern="\d{9,15}" title="Debe contener entre 9 y 15 dígitos." />
    </div>

    <input type="hidden" name="contrasena" class="form-control" value="@Model.Contrasena" required />

    <div class="mb-3">
        <label for="colorAvatar" class="form-label">Color de Avatar</label>
        <input type="color" id="colorAvatar" name="ColorAvatar" value="@Model?.ColorAvatar" class="form-control form-control-color" />
    </div>
    @if(Model.IdRolUsuario == 2)
    {
        <div class="mb-3">
            <label for="adminCode" class="form-label">Código de Administrador (Opcional)</label>
            <input type="password" id="adminCode" name="adminCode" class="form-control" value="Taj@mar365" enabled />
        </div>
        <div class="mb-3 form-check">
            <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="enableAdminCode" checked>
                <label class="form-check-label" for="enableAdminCode">¿Es un administrador?</label>
            </div>
        </div>
    }
    else
    {
        <div class="mb-3">
            <label for="adminCode" class="form-label">Código de Administrador (Opcional)</label>
            <input type="password" id="adminCode" name="adminCode" class="form-control" disabled />
        </div>
        <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" id="enableAdminCode">
            <label class="form-check-label" for="enableAdminCode">¿Es un administrador?</label>
        </div>
    }

    <button type="submit" class="btn btn-primary w-100 mt-3">Editar perfil</button>
</form>



<script>
    document.getElementById("enableAdminCode").addEventListener("change", function() {
        var adminCodeField = document.getElementById("adminCode");
        if (this.checked) {
            adminCodeField.disabled = false; // Habilitar el campo
        } else {
            adminCodeField.disabled = true; // Deshabilitar el campo
        }
    });
</script>



<style>
    .container {
        max-width: 600px;
        margin-top: 50px;
    }

    .form-select {
        font-size: 1.1rem;
    }

    .form-label {
        font-weight: 600;
    }

    .btn-primary {
        font-size: 1.2rem;
        padding: 0.75rem;
        border-radius: 8px;
    }

    .shadow-lg {
        box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
    }

    .bg-light {
        background-color: #f8f9fa !important;
    }

    h2 {
        font-family: 'Arial', sans-serif;
    }
</style>