<div class="text-center">
    <h1 class="display-3 text-primary">Nuevo usuario</h1>
    <p class="text-secondary">Crea una cuenta para un nuevo usuario</p>
</div>

<div class="d-flex justify-content-center mb-4">
    <a asp-controller="Management" asp-action="Index" class="btn btn-secondary mx-2">
        <i class="fa-solid fa-arrow-left"></i> Volver
    </a>
</div>

<form method="post" class="mt-3 p-4">
    <div class="mb-3">
        <label for="nombre" class="form-label">Nombre</label>
        <input type="text" name="Nombre" class="form-control" required />
    </div>

    <div class="mb-3">
        <label for="apellidos" class="form-label">Apellidos</label>
        <input type="text" name="Apellidos" class="form-control" required />
    </div>

    <div class="mb-3">
        <label for="email" class="form-label">Correo</label>
        <input type="email" name="Email" class="form-control" required />
    </div>

    <div class="mb-3">
        <label for="telefono" class="form-label">Teléfono</label>
        <input type="text" name="Telefono" class="form-control" required pattern="\d{9,15}" title="Debe contener entre 9 y 15 dígitos." />
    </div>

    <div class="mb-3">
        <label for="contrasena" class="form-label">Contraseña</label>
        <input type="password" name="Contrasena" class="form-control" required minlength="6" />
    </div>

    <div class="mb-3">
        <label for="colorAvatar" class="form-label">Color de Avatar</label>
        <input type="color" id="colorAvatar" name="ColorAvatar" class="form-control form-control-color" />
    </div>

    <div class="mb-3">
        <label for="adminCode" class="form-label">Código de Administrador (Opcional)</label>
        <input type="password" id="adminCode" name="AdminCode" class="form-control" disabled />
    </div>

    <div class="mb-3 form-check">
        <input type="checkbox" class="form-check-input" id="enableAdminCode">
        <label class="form-check-label" for="enableAdminCode">¿Es un administrador?</label>
    </div>

    <button type="submit" class="btn btn-primary w-100 mt-3">Registrarse</button>
</form>



<script>
    document.getElementById("enableAdminCode").addEventListener("change", function() {
        var adminCodeField = document.getElementById("adminCode");
        if (this.checked) {
            adminCodeField.disabled = false; // Habilitar el campo
        } else {
            adminCodeField.disabled = true; // Deshabilitar el campo
        }
    });
</script>



