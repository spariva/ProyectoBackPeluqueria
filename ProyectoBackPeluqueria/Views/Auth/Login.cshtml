<div class="text-center">
    <h1 class="display-3 text-primary">Iniciar sesión</h1>
    <p class="text-secondary">Introduce tus credenciales para acceder a la aplicación</p>
</div>

<form method="post" class="mt-3 p-4">
    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="text" name="email" class="form-control" />
    </div>
    <div class="mb-3">
        <label for="password" class="form-label">Contraseña</label>
        <input type="password" name="password" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary w-100 mt-3 ">Iniciar sesión</button>
</form>

@if (ViewData["error"] != null)
{
    <div class="alert alert-danger" role="alert" style="font-size: 0.875rem; background-color: #f8d7da; color: #e74c3c; border: 1px solid #f5c6cb; padding: 10px; border-radius: 5px;">
        <strong>Error:</strong> @ViewData["error"]
    </div>

}

<a asp-action="Register" class="link-auth">¿No tienes una cuenta? Regístrate</a>




